<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:layout_margin="0dp"
    tools:context=".Fragments.CrearNVFragment">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0sp"
        android:layout_marginTop="0sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtVendedor_fragment_crear_nv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vendedor"
                android:layout_margin="10sp"
                android:textSize="19sp"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10sp">

            <EditText
                android:id="@+id/txtCliente_fragment_crear_nv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:paddingRight="10sp"
                android:hint="@string/cliente"
                android:text="Nombre Cliente"
                android:autofillHints="" />

            </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/btnAyudaCliente_fragment_crear_nv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="13sp"
                    android:text="@string/buscar" />
            </LinearLayout>

            </HorizontalScrollView>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInputLayout1"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:text="PRODUCTOS" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:hint="Cod. PLU"
                        android:inputType="number"/>
                    <Button
                        android:id="@+id/btnAyudaProducto_frament_crear_nv"
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:layout_marginLeft="10sp"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:hint="Nombre producto"
                        android:enabled="false"
                        android:inputType="text"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:hint="Precio Unitario"
                        android:enabled="false"
                        android:inputType="number"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:hint="Cantidad"
                        android:inputType="number"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:hint="Descuento"
                        android:inputType="number"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:enabled="false"
                        android:hint="Total"
                        android:inputType="number"/>
                    <Button
                        android:id="@+id/btnOkProducto_frament_crear_nv"
                        android:layout_width="50sp"
                        android:layout_height="wrap_content"
                        android:text="OK"
                        android:layout_marginLeft="10sp"/>


                </LinearLayout>

            </HorizontalScrollView>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horizontalScrollView1"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="40sp"
                android:enabled="false"
                android:hint="Total Venta"
                android:inputType="number"/>


        </LinearLayout>



    </ScrollView>


</RelativeLayout>