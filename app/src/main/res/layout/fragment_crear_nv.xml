<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    tools:context=".Fragments.CrearNVFragment">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/txtVendedor_fragment_crear_nv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vendedor"
                android:layout_margin="10dp"
                android:textSize="19dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

            <EditText
                android:id="@+id/txtCliente_fragment_crear_nv"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:paddingRight="10dp"
                android:hint="@string/cliente"
                android:autofillHints="" />

                <Button
                    android:id="@+id/btnAyudaCliente_fragment_crear_nv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/buscar" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>



    </ScrollView>
</RelativeLayout>